CREATE DATABASE  `<%= new_db_name %>` DEFAULT CHARACTER SET utf8 COLLATE utf8_general_ci;
CREATE USER '<%= new_db_user %>'@'localhost' IDENTIFIED BY  '<%= new_user_db_password %>';
GRANT USAGE ON * . * TO  '<%= new_db_user %>'@'localhost' IDENTIFIED BY  '<%= new_user_db_password %>' WITH MAX_QUERIES_PER_HOUR 0 MAX_CONNECTIONS_PER_HOUR 0 MAX_UPDATES_PER_HOUR 0 MAX_USER_CONNECTIONS 0 ;
GRANT ALL PRIVILEGES ON  `<%= new_db_name %>` . * TO  '<%= new_db_user %>'@'localhost' WITH GRANT OPTION ;
FLUSH PRIVILEGES ;
